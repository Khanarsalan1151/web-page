<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <form method = "post" action="/signup" novalidate class="needs-validation">
            <h1>SignUp on WanderLust</h1>
            <div class="mb-4 ">
                <label for="username" class="form-label">Username</label>
                <input type="text" 
                name="username" 
                id="username" 
                class="form-control" 
                placeholder="Add a catchy username" 
                required >
                <div class="valid-feedback">Looks good!!</div>
            </div>

            <div class="mb-4 ">
                <label for="email" class="form-label">Email</label>
                <input type="email" 
                name="email" 
                id="email" 
                class="form-control" 
                placeholder="Add a email" 
                required >
                <div class="valid-feedback">Looks good!!</div>
            </div>

            <div class="mb-4 ">
                <label for="password" class="form-label">Password</label>
                <input type="password" 
                name="password" 
                id="password" 
                class="form-control" 
                placeholder="Unique Password" 
                required >
                <div class="valid-feedback">Looks good!!</div>
            </div>
            
            <div class="mb-4 ">
                <label for="gender" class="form-label">gender</label>
                <input type="text" name="gender" id="gender" class="form-control" placeholder="Unique Password" required>
                <div class="valid-feedback">good!!</div>
            </div>

            <div class="mb-4 ">
                <label for="phoneNo" class="form-label">phoneNo</label>
                <input type="number" name="phoneNo" id="phoneNo" class="form-control" placeholder="Unique Password" required>
                <div class="valid-feedback">Looks good!!</div>
            </div>

            <button class="btn btn-success">SignUp</button>

        </form>
    </div>
</div>